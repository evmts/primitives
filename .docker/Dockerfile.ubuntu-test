# Ubuntu-based Docker image for Guillotine CI (test version)
FROM --platform=linux/amd64 ubuntu:22.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    libssl-dev \
    pkg-config \
    clang \
    lld \
    python3 \
    ca-certificates \
    gnupg \
    xz-utils \
    tar \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 18 from NodeSource
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Install Rust (needed for bn254_wrapper)
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install Zig 0.15.1
RUN curl -L https://ziglang.org/download/0.15.1/zig-x86_64-linux-0.15.1.tar.xz | tar -xJ -C /opt && \
    ln -s /opt/zig-x86_64-linux-0.15.1/zig /usr/local/bin/zig

# Set working directory
WORKDIR /workspace

# Set environment variable to skip submodule check in Docker
ENV SKIP_SUBMODULE_CHECK=1

# Default command - we'll mount the volume instead of copying
CMD ["bash", "-c", "zig build && zig build test && zig build bench"]